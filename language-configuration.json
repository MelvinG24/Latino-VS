{
    "comments": {
        "lineComment": "//",
        "numberComment": "#",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "\"", "close": "\""},
        { "open": "'",  "close": "'"},
        { "open": "/*", "close": "*/"}
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "\\b(caso|clase|si|sino|elegir|defecto|otro|mientras|repetir|desde|funcion|fun|osi)\\b((?!fin).)*$|\\{\\s*$",
        "decreaseIndentPattern": "^\\s*(caso|fin|sino|osi,?|\\}\\)?).*$"
    }
}