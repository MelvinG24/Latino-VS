{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
		{ "open": "\"", "close": "\""},
		{ "open": "'", "close": "'"}
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
	"indentationRules": {
		"increaseIndentPattern": "^([^-]|-(?!-))*((\\b(si|sino|elegir|caso|defecto|mientras|repetir|desde|funcion|fun|osi)\\b((?!\\b(fin|hasta)\\b).)*)|(\\{\\s*))$",
		"decreaseIndentPattern": "^\\s*(fin|sino|osi,?|\\}\\)?|\\]).*$"
	}
}