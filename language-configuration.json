{
    "comments": {
        "lineComment": "//",
        "numberComment": "#",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
		{ "open": "\"", "close": "\""},
		{ "open": "'", "close": "'"}
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
	"indentationRules": {
		"increaseIndentPattern": "\\b(caso|si|sino|elegir|defecto|mientras|repetir|desde|funcion|fun|osi)\\b((?!fin).)*$|\\{\\s*$",
		"decreaseIndentPattern": "^\\s*(caso|fin|sino|osi,?|\\}\\)?).*$"
	}
}